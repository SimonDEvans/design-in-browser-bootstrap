{
  "name": "DesignInTheBrowserBootstrap",
  "version": "2.0.0",
  "author": "Torchbox Ltd",
  "sasslintConfig": ".sass-lint.yml",
  "scripts": {
    "deploy": "dploy",
    "clean": "rm -rf dist/{*.html,js/**,css/**}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "scss": "node-sass --output-style compressed -o dist/css site/sass/",
    "serve": "browser-sync start --server dist --files 'dist/css/*.css, dist/js/*.js, dist/*.html, !node_modules/**/*.html'",
    "lint:js": "eslint site/javascript/*.js --ignore-pattern **/vendor/**/*.js || true",
    "lint:css": "sass-lint 'site/sass/**/*.scss' -v -q || true",
    "lint": "npm-run-all -p lint:js lint:css",
    "build:html": "swig render site/*.html --output dist",
    "build:js": "babel site/javascript/main.js --out-file dist/js/main.js",
    "build:css": "npm run scss && npm run autoprefixer",
    "build": "npm run lint && npm-run-all -p build:html build:js build:css",
    "watch:html": "onchange 'site/*.html' -- npm run build:html",
    "watch:js": "onchange 'site/javascript/' -- npm-run-all -p lint:js build:js",
    "watch:css": "onchange 'site/sass/' -- npm-run-all -p lint:css build:css",
    "watch": "npm-run-all -p watch:html watch:js watch:css",
    "dev": "npm run build && npm-run-all -p serve watch",
    "postinstall": "npm run dev"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.13.0",
    "dploy": "^1.2.0",
    "eslint": "^3.2.2",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "sass-lint": "^1.8.2",
    "swig-templates": "^2.0.1"
  },
  "engines": {
    "node": ">=4 <6"
  }
}
