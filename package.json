{
  "name": "DIBB",
  "version": "2.0.0",
  "author": "Torchbox Ltd",
  "sasslintConfig": ".sass-lint.yml",
  "config" : {
    "src_html" : "site/templates/",
    "src_js" : "site/javascript/*.js",
    "src_css" : "site/sass/",
    "src_img" : "site/images/",
    "dest_html" : "dist",
    "dest_js" : "dist/js",
    "dest_css" : "dist/css",
    "dest_img" : "dist/img"
  },
  "scripts": {
    "deploy": "dploy",
    "clean": "rm -rf $npm_package_config_dest_html/{*.html,js/**,css/**,img/**}",
    "autoprefixer": "postcss -u autoprefixer -r $npm_package_config_dest_css/*.css",
    "scss": "node-sass --output-style compressed -o $npm_package_config_dest_css $npm_package_config_src_css",
    "serve:lab": "gulp patternlab:serve",
    "//serve": "browser-sync start --server dist --files '$npm_package_config_dest_css/*.css, $npm_package_config_dest_js/*.js, $npm_package_config_dest_html/*.html, $npm_package_config_dest_img/**/**, !node_modules/**/*.html'",
    "lint:js": "eslint $npm_package_config_src_js --ignore-pattern **/vendor/**/*.js || true",
    "lint:css": "sass-lint $npm_package_config_src_css**/*.scss -v -q || true",
    "lint": "npm-run-all -p lint:js lint:css",
    "//build:html": "swig render $npm_package_config_src_html/*.html --output dist",
    "build:img": "cp -R $npm_package_config_src_img. $npm_package_config_dest_img/",
    "build:js": "rollup -c",
    "build:css": "npm run scss && npm run autoprefixer",
    "build": "npm run lint && npm-run-all -p build:html build:img build:js build:css",
    "//watch:html": "onchange $npm_package_config_src_html/*.{html,tpl,twig} -- npm run build:html",
    "watch:img": "onchange $npm_package_config_src_img**/** -- npm run build:img",
    "watch:js": "onchange $npm_package_config_src_js -- npm-run-all -p lint:js build:js",
    "watch:css": "onchange $npm_package_config_src_css -- npm-run-all -p lint:css build:css",
    "watch": "npm-run-all -p watch:html watch:img watch:js watch:css",
    "dev": "npm run build && npm-run-all -p serve watch",
    "lab": "npm run serve:lab"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-eslint": "^6.1.2",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.13.0",
    "dploy": "^1.2.0",
    "eslint": "^3.2.2",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-run": "^1.7.1",
    "gulp-shell": "^0.5.2",
    "minimist": "^1.2.0",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "patternengine-node-twig": "^0.1.0",
    "patternlab-node": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.34.8",
    "rollup-plugin-babel": "^2.6.1",
    "sass-lint": "^1.8.2",
    "styleguidekit-assets-default": "^3.0.0",
    "styleguidekit-mustache-default": "^3.0.0",
    "swig-templates": "^2.0.1"
  },
  "engines": {
    "node": ">=4 <6"
  }
}
